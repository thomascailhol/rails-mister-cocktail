<div class="container">
   <div class="row">
     <div class="col-xs-12 col-sm-8 col-sm-offset-2">
     <h1>Cocktails:</h1>
      <ul>
      <% @cocktails.each do |cocktail| %>
        <li><%= link_to "#{cocktail.name}", cocktail_path(cocktail) %></li>
      <% end %>
      </ul>
      <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>